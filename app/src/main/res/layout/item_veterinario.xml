<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LinearLayoutRaizItems">

    <LinearLayout style="@style/LinearLayoutsHorizontalesItems">

        <TextView
            style="@style/TituloItems"
            android:text="@string/item_veterinario_txt_nombre" />

        <TextView
            android:id="@+id/txt_nombre_veterinario"
            style="@style/TituloItems"
            android:layout_marginLeft="@dimen/margen_medio"
            tools:text="David R. Auza" />

    </LinearLayout>

    <LinearLayout style="@style/LinearLayoutsHorizontalesItems">

        <TextView
            style="@style/TextoAyudaItems"
            android:text="@string/item_veterinario_txt_documento" />

        <TextView
            android:id="@+id/txt_documento_veterinario"
            style="@style/TextoContenidoItems"
            tools:text="1234567890" />

    </LinearLayout>

    <LinearLayout style="@style/LinearLayoutsHorizontalesItems">

        <TextView
            style="@style/TextoAyudaItems"
            android:text="@string/item_veterinario_txt_direccion" />

        <TextView
            android:id="@+id/txt_direccion_veterinario"
            style="@style/TextoContenidoItems"
            tools:text="Cúcuta Avenida Siempre Viva" />

    </LinearLayout>

    <LinearLayout style="@style/LinearLayoutsHorizontalesItems">

        <TextView
            style="@style/TextoAyudaItems"
            android:text="@string/item_veterinario_txt_telefono" />

        <TextView
            android:id="@+id/txt_telefono_veterinario"
            style="@style/TextoContenidoItems"
            tools:text="3001234567" />

    </LinearLayout>

    <LinearLayout style="@style/LinearLayoutsHorizontalesItems">

        <TextView
            style="@style/TextoAyudaItems"
            android:text="@string/item_veterinario_txt_registro_profesional" />

        <TextView
            android:id="@+id/txt_registro_profesional_veterinario"
            style="@style/TextoContenidoItems"
            tools:text="1987654320" />

    </LinearLayout>

    <LinearLayout style="@style/LinearLayoutsHorizontalesItems">

        <TextView
            style="@style/TextoAyudaItems"
            android:text="@string/item_veterinario_txt_especialidad" />

        <TextView
            android:id="@+id/txt_especialidades_veterinario"
            style="@style/TextoContenidoItems"
            tools:text="Cardiología" />

    </LinearLayout>

    <View style="@style/LineasDivisionItems" />

</LinearLayout>