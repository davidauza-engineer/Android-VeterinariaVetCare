<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LinearLayoutRaizItems">

    <LinearLayout style="@style/LinearLayoutsHorizontalesItems">

        <TextView
            style="@style/TituloItems"
            android:text="@string/item_mascota_txt_nombre" />

        <TextView
            android:id="@+id/txt_nombre_mascota"
            style="@style/TituloItems"
            android:layout_marginLeft="@dimen/margen_medio"
            tools:text="Luke Skywalker" />

    </LinearLayout>

    <LinearLayout style="@style/LinearLayoutsHorizontalesItems">

        <TextView
            style="@style/TextoAyudaItems"
            android:text="@string/item_mascota_txt_fecha_de_nacimiento" />

        <TextView
            android:id="@+id/txt_fecha_de_nacimiento_mascota"
            style="@style/TextoContenidoItems"
            tools:text="02/03/2015" />

    </LinearLayout>

    <LinearLayout style="@style/LinearLayoutsHorizontalesItems">

        <TextView
            style="@style/TextoAyudaItems"
            android:text="@string/item_mascota_txt_sexo" />

        <TextView
            android:id="@+id/txt_sexo_mascota"
            style="@style/TextoContenidoItems"
            tools:text="Masculino" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            style="@style/TextoAyudaItems"
            android:text="@string/item_mascota_txt_especie" />

        <TextView
            android:id="@+id/txt_especie_mascota"
            style="@style/TextoContenidoItems"
            tools:text="Canino" />

    </LinearLayout>

    <View style="@style/LineasDivisionItems" />

</LinearLayout>