<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout style="@style/LinearLayoutsRegistros">

        <TextView
            style="@style/TitulosRegistros"
            android:text="@string/registro_veterinario_txt_titulo" />

        <EditText
            android:id="@+id/txt_nombre_veterinario"
            style="@style/EditTextRegistros"
            android:hint="@string/registro_veterinario_hint_nombre" />

        <EditText
            android:id="@+id/txt_numero_identidad_veterinario"
            style="@style/EditTextRegistros"
            android:hint="@string/registro_veterinario_hint_numero_identidad" />

        <EditText
            android:id="@+id/txt_direccion_veterinario"
            style="@style/EditTextRegistros"
            android:hint="@string/registro_veterinario_hint_direccion" />

        <EditText
            android:id="@+id/txt_tarjeta_profesional_veterinario"
            style="@style/EditTextRegistros"
            android:hint="@string/registro_veterinario_hint_tarjeta_profesional" />

        <EditText
            android:id="@+id/txt_especialidad_veterinario"
            style="@style/EditTextRegistros"
            android:hint="@string/registro_veterinario_hint_especialidad" />

        <EditText
            android:id="@+id/txt_consultas_realizadas_veterinario"
            style="@style/EditTextRegistros"
            android:hint="@string/registro_veterinario_hint_consultas" />

        <EditText
            android:id="@+id/txt_telefono_veterinario"
            style="@style/EditTextRegistros"
            android:hint="@string/registro_veterinario_hint_telefono" />

        <Button
            android:id="@+id/btn_registrar"
            style="@style/BotonesRegistrar"
            android:text="@string/registro_veterinario_btn_registrar" />

    </LinearLayout>

</ScrollView>