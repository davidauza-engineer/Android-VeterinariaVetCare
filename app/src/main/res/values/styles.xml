<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Estilo para los botones de activity_main.xml -->
    <style name="BotonesMainActivity">
        <item name="android:layout_width">@dimen/activity_main_ancho_botones</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Estilo para los EditText de activity_registro_mascota.xml,
        activity_registro_veterinario.xml y activity_registro_consulta -->
    <style name="EditTextRegistros">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margen_estandar</item>
    </style>

    <!-- Estilo para los RadioButton de activity_registro_mascota.xml -->
    <style name="RadioButtonRegistro">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Estilo para los TextViews que indican el campo a rellenar en activity_registro_mascota.xml
        y activity_registro_consulta.xml -->
    <style name="TextViewsRegistros">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margen_estandar</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Estilo para los TextViews que sirven como títulos en las activities de registro:
        activity_registro_mascota.xml, activity_registro_veterinario.xml y
        activity_registro_consulta.xml -->
    <style name="TitulosRegistros">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <!-- Estilo para los botones para registrar en activity_registro_mascota.xml,
        activity_registro_veterinario.xml y activity_registro_consulta.xml -->
    <style name="BotonesRegistrar">
        <item name="android:layout_width">@dimen/activity_main_ancho_botones</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margen_doble</item>
        <item name="android:layout_marginBottom">@dimen/margen_doble</item>
    </style>

    <!-- Estilo para los LinearLayouts presentes en activity_registro_mascota.xml,
        activity_registro_veterinario.xml y activity_registro_consulta.xml -->
    <style name="LinearLayoutsRegistros">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margen_estandar</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Estilo para los DatePickers presentes en activity_registro_mascota.xml y
        activity_registro_consulta.xml -->
    <style name="FechaRegistros">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margen_estandar</item>
    </style>

    <!-- Estilo para el LinearLayout raíz en item_mascota.xml, item_veterinario.xml y
        item_consulta.xml -->
    <style name="LinearLayoutRaizItems">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margen_estandar</item>
        <item name="android:layout_marginLeft">@dimen/margen_estandar</item>
        <item name="android:layout_marginRight">@dimen/margen_estandar</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Estilo para los LinearLayout horizontales en item_mascota.xml, item_veterinario.xml y
        item_consulta.xml -->
    <style name="LinearLayoutsHorizontalesItems">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Estilo para los TextView que incluyen el nombre de la mascota en item_mascota.xml, el
        nombre del veterinario en item_veterinario.xml, o la fecha de la consulta en
        item_consulta.xml -->
    <style name="TituloItems">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <!-- Estilo para los TextView que incluyen texto de ayuda en item_mascota.xml, item_
        veterinario.xml, e item_consulta.xml -->
    <style name="TextoAyudaItems">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Estilo para los TextView que incluyen texto de cada mascota en item_mascota.xml, o de cada
        veterinario en item_veterinario.xml, o de cada consulta en item_consulta.xml -->
    <style name="TextoContenidoItems">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:layout_marginLeft">@dimen/margen_medio</item>
    </style>

    <!-- Estilo para los Views que actúan como líneas de división en item_mascota.xml,
        item_veterinario.xml. y item_consulta.xml -->
    <style name="LineasDivisionItems">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/margen_estandar</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

</resources>
