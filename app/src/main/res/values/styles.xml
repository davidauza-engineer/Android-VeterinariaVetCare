<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Estilo para los botones de activity_main.xml -->
    <style name="BotonesMainActivity">
        <item name="android:layout_width">@dimen/activity_main_ancho_botones</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Estilo para los EditText de activity_registro_mascota.xml -->
    <style name="EditTextRegistro">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margen_estandar</item>
    </style>

    <!-- Estilo para los RadioButton de activity_registro_mascota.xml -->
    <style name="RadioButtonRegistro">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Estilo para los TextViews que indican el campo a rellenar en activity_registro_mascota.xml
        -->
    <style name="TextViewsRegistro">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margen_estandar</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

</resources>
